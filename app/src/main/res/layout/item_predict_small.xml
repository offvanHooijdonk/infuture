<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/txtPredictText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="How much wood would a woodchuck chuck? More then 2?"
        android:textColor="@color/list_item_primary"
        android:textSize="@dimen/list_item_primary" />

    <LinearLayout
        android:id="@+id/blockVoteStat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/txtPredictText"
        android:layout_marginBottom="@dimen/vote_stat_margin_v"
        android:layout_marginTop="@dimen/vote_stat_margin_v"
        android:layout_marginStart="@dimen/vote_stat_margin_h"
        android:layout_marginEnd="@dimen/vote_stat_margin_h">

        <View
            android:id="@+id/viewVotesPositive"
            style="@style/VoteStat.ListItem"
            android:layout_weight="30"
            android:background="@color/vote_stat_pos" />

        <View
            android:layout_width="@dimen/vote_stat_separator_width"
            android:layout_height="0dp" />

        <View
            android:id="@+id/viewVotesNegative"
            style="@style/VoteStat.ListItem"
            android:layout_weight="70"
            android:background="@color/vote_stat_neg" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/blockVoteStat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.willthishappen.infuture.presentation.ui.view.BadgeNumbersView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:numberValue="20"
            app:src="@drawable/ic_menu_camera"
            app:imageSize="18dp"/>
    </LinearLayout>

</RelativeLayout>